{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure",
      "type": "shell",
      "command": "cmake --preset default",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "cmake --build build --config Debug",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": "Configure",
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "./build/bin/MMORPGEngine.exe",
      "group": "test",
      "dependsOn": "Build",
      "problemMatcher": []
    }
  ]
}
