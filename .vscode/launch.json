{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ÔøΩ Run Engine (Default)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/Debug/MMORPGEngine.exe",
            "args": ["--enable-networking"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake Build"
        },
        {
            "name": "üîó Connect to Running Server",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/Debug/MMORPGEngine.exe",
            "args": ["--client", "localhost", "12345"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake Build"
        },
        {
            "name": "ÔøΩÔ∏è Dedicated Server (Advanced)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/Debug/MMORPGEngine.exe",
            "args": ["--server"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake Build"
        }
    ]
}
