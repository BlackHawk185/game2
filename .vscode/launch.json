{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Engine (Review)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/review/bin/Debug/MMORPGEngine.exe",
            "args": ["--enable-networking"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake Build (Review)"
        },
        {
            "name": "Run Engine (Debug)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/bin/Debug/MMORPGEngine.exe",
            "args": ["--enable-networking"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake Build (Debug)"
        },
        {
            "name": "Run Engine (Sanitized)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/sanitized/bin/Debug/MMORPGEngine.exe",
            "args": ["--enable-networking"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake Build (Sanitized)"
        },
        {
            "name": "Connect to Running Server (Review)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/review/bin/Debug/MMORPGEngine.exe",
            "args": ["--client", "localhost", "12345"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake Build (Review)"
        },
        {
            "name": "Dedicated Server (Review)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/review/bin/Debug/MMORPGEngine.exe",
            "args": ["--server"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake Build (Review)"
        }
    ]
